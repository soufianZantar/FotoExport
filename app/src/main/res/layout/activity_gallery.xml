<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofian.fotoexport.GalleryActivity">
    <TextView
        android:text="Select one or more photos to export"
        android:id="@+id/desc_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1e2696"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/desc_gallery"
        android:layout_height="wrap_content"
        android:id="@+id/prog_export"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_export"
        android:text="Export"
        android:layout_below="@+id/prog_export"
        android:layout_width="150dp"
        android:layout_alignParentRight="true"
        android:background="#1e2696"
        android:textColor="#ffffff"
        android:layout_height="50dp" />
    <GridView
        android:layout_below="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_gallery"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />



</RelativeLayout>
